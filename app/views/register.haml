.login-page
  .login-space
    .row
      .col-sm-6.back
        %img.background-image{:src=>"imgs/background.jpg"}
      .col-sm-6.sign-in-space
        %h4.reg_head Sign up
        %form.registration{:action => "/register", :method => "post", :role => "form"}
          .form-group
            %input#exampleInputUsername1.form-control{"aria-describedby" => "emailHelp", :name =>"username", :placeholder => "Enter username", :type => "text"}/
          .form-group
            %input#exampleInputEmail1.form-control{"aria-describedby" => "emailHelp", :name =>"email", :placeholder => "Enter email", :type => "email"}/
          .form-group
            %input#exampleInputPassword1.form-control{:placeholder => "Password", :id => "password", :name =>"password", :type => "password"}/
          .form-group
            %input#exampleInputPassword2.form-control{:placeholder => "Retype Password", :id => "confirm-password", :name =>"password-confirmation", :type => "password"}/  
          %button.btn.btn-outline-primary.sign-in{:type => "submit"} Sign up