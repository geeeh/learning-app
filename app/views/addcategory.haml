= haml :dashboard
.categories
  %button{:class=> "btn btn-outline-secondary category-creation", "data-target" => "#exampleModalCenter", "data-toggle" => "modal", :type => "button" } Add category
  #exampleModalCenter.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalCenterTitle", :role => "dialog", :tabindex => "-1"}
    .modal-dialog.modal-dialog-centered{:role => "document"}
      .modal-content
        .modal-header
          %h5#exampleModalCenterTitle.modal-title Add new Category
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          %form{:action => "/categories", :method => "post", :role => "form"}
            .form-group
              %label{:for => "name"} category
              %input#name.form-control{ :placeholder => "category title", :type => "text", :name=> "name", :required => ""}/
            .form-group
              %label{:for => "description"} Description
              %textarea#description.form-control{:cols => "50", :rows => "4", :name => "description", :required => ""}
              :preserve
              %text{:placeholder => "Password", :type => ""}/
            %button.btn.btn-primary{:type => "submit"} Submit

  - if flash[:notice]
    .form-group{class: "show-warning"}
      %div{class: "alert alert-warning", "data-alert" => ""}
        = flash[:notice]
        %a.close{href: "#"}
